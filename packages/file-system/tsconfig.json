{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "lib": ["es6"],
        "outDir": "./src"
    },
    "include": ["./src"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
